# BigQuery AI Hackathon - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=dev
DEBUG=true

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================
# Your Google Cloud Project ID (required)
GOOGLE_CLOUD_PROJECT=your-project-id-here

# Google Cloud region for resources
GOOGLE_CLOUD_REGION=us-central1

# BigQuery dataset ID
BIGQUERY_DATASET_ID=bigquery_ai_hackathon

# BigQuery location (US, EU, asia-northeast1, etc.)
BIGQUERY_LOCATION=US

# Cloud Storage bucket name (required)
CLOUD_STORAGE_BUCKET=your-bucket-name-here

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API host binding
API_HOST=0.0.0.0

# API port
API_PORT=8080

# Number of API workers
API_WORKERS=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens (required - generate a secure random string)
SECRET_KEY=your-secret-key-here-make-it-long-and-random

# JWT algorithm
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=json

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable metrics collection
ENABLE_METRICS=true

# Metrics port
METRICS_PORT=9090

# =============================================================================
# BIGQUERY AI MODEL CONFIGURATION
# =============================================================================
# Default text generation model
DEFAULT_TEXT_MODEL=gemini-pro

# Default embedding model
DEFAULT_EMBEDDING_MODEL=text-embedding-001

# Default forecasting model
DEFAULT_FORECAST_MODEL=auto-arima

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Request timeout in seconds
REQUEST_TIMEOUT=300

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable hot reload for development
RELOAD=false

# Enable CORS for development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test environment variables (these are automatically set during testing)
# ENVIRONMENT=test
# GOOGLE_CLOUD_PROJECT=test-project-id
# CLOUD_STORAGE_BUCKET=test-bucket
# SECRET_KEY=test-secret-key-for-testing-only

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production, you might want to override these values:
# ENVIRONMENT=prod
# DEBUG=false
# LOG_LEVEL=WARNING
# API_WORKERS=4
# MAX_CONCURRENT_REQUESTS=1000
# ENABLE_METRICS=true
# CORS_ORIGINS=["https://yourdomain.com"]

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. Generate a secure random SECRET_KEY for production
# 3. Use appropriate IAM roles and service accounts
# 4. Enable audit logging in production
# 5. Use VPC and firewall rules for production environments
# 6. Monitor costs and set up billing alerts
# 7. Regularly rotate credentials and secrets
